<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="noticas.app.tecsup.com.noticias.NoticiaDetalleActivity">

    <ImageView
        android:id="@+id/portada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_imgportada"
        android:maxHeight="30dp" />

    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portada"
        android:layout_marginLeft="12dp"
        android:text="Detalles de la noticia"
        android:textColor="#000dff"
        android:textSize="22dp"

        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/realizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_titulo"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/text_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_clock"
            android:text="fecha"
            android:textColor="#ff3700"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_fecha"
            android:text=" | "
            android:textColor="#ff3700"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/separador"
            android:text="hora"
            android:textColor="#ff3700"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/realizar"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:text="Descripcion" />

</RelativeLayout>
